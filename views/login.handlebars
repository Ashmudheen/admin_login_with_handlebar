<div class="col-12 col-md-6 mx-auto bg-light p-4 mt-5" style="background-image:linear-gradient(#303030,#303030,#303030);">
    <form method="POST" action="/login">
        <h4>User Login</h4>
        {{#if msg}}
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            {{msg}}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        {{/if}}
        <div class="form-group">
            <label for="email">Username</label>
            <input type="text" name="name" class="form-control" id="email" required value="{{name}}"
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" name="password" id="password" required value="{{password}}">
        </div>
        <button type="submit" class="btn btn-primary btn-block mb-2">Login</button>
    </form>
    <a href="/register">Don't have an account?. create one</a>
</div>